@model WebBanGiay.Models.Order
<h2>Nhập địa chỉ</h2>
<form asp-action="Checkout" method="post">
    <div class="form-group">
        <label asp-for="ShippingAddress">Shipping Address</label> 
        <input asp-for="ShippingAddress" class="form-control" required />
        <div class="invalid-feedback">Vui lòng nhập địa chỉ giao hàng.</div>
    </div>
    <div class="form-group">
        <label asp-for="Notes">Số điện thoại</label>
        <textarea asp-for="Notes" class="form-control" required></textarea>
        <div class="invalid-feedback">Vui lòng nhập số điện thoại.</div>
    </div>
    <button type="submit" class="btn btn-primary">Đặt hàng</button>
</form> 

@model WebBanGiay.Models.Order
<h2>Order Details - @Model.Id</h2>

<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá</th>
            <th>Tổng thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.OrderDetails)
        {
            <tr>
                <td>@detail.Product.Name</td>
                <td>@detail.Quantity</td>
                <td>@detail.Price.ToString("N0")VND</td>
                <td>@((detail.Price * (detail.Quantity)).ToString("N0"))VND</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <h3><strong>Tổng thành tiền:</strong> @Model.TotalPrice.ToString("N0")VND</h3>
</div>

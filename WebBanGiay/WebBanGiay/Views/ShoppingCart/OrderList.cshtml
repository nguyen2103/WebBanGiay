@model IEnumerable<WebBanGiay.Models.Order>

<h2>Lịch sử đơn hàng của bạn</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Ngày</th>
                <th>Thành tiền</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td>@order.TotalPrice.ToString("N0")VND</td>
                    <td>
                        <!-- Link đến trang chi tiết đơn hàng -->
                        <a href="@Url.Action("OrderDetails", "ShoppingCart", new { orderId = order.Id })">Chi tiết đơn hàng</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>@ViewBag.Message</p>
}